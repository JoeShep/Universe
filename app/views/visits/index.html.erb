<% if @visits.empty? %>
    <p>"Your visits list is empty. Time to <%= link_to "add a school", new_visit_path %></p>
    <% else %>
    <ul>
      <% @visits.each do |school| %>
        <li class="schools_list"><%= link_to "#{school.school_name}, visited on #{school.visit_date}", visit_url(school) %></li>
      <% end %>
    </ul>
    <%= link_to "add a school", new_visit_path %>
<%end%>